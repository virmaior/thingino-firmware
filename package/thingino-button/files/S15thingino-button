#!/bin/sh

DAEMON_ARGS="-d"

. /usr/share/common

start() {
	echo_title "Starting Button service"

	start_daemon
}

stop() {
	echo_title "Stopping Button service"

	stop_daemon
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart | reload)
		stop || true
		sleep 1
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart|reload}"
		exit 1
		;;
esac

exit 0
