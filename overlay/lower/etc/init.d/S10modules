#!/bin/sh

. /usr/share/common

load_modules() {
	local file=$1
	[ -r "$file" ] || return 0

	while read -r module args; do
		case "$module" in
			"" | "#"*) continue ;;
		esac
		echo "Loading $module $args"
		modprobe $module $args
	done < $file
}

start() {
	echo "Loading kernel modules..."

	load_modules /etc/modules
	[ -d /etc/modules.d ] && for conf in /etc/modules.d/*; do
		load_modules $conf
	done
}

case "$1" in
	start)
		start
		;;
	stop)
		true
		;;
	*)
		echo "Usage: $0 {start|stop}"
		exit 1
		;;
esac

exit 0
